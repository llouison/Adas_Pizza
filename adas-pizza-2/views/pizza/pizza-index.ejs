<% include ../partials/boilerplate %>

<h1>Ada's Pizza Menu!</h1>

<div class='pizzalist'>
  <h2>Check out all these amazing pizzas...</h2>
  <% pizzaData.forEach((pizza, index) => { %>
    <div class='frame'>
      <h3><%= pizza.flavor %></h3>
      <p>This pizza comes from <%= pizza.location %>.</p>
      <a href='/pizzas/<%= index + 1%>'>Learn more!</a>
    </div>
  <% }) %>
</div>
 
<% include ../partials/end %>